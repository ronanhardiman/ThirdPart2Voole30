<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.voole.thirdpart2voole30.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到search页面" />

                <Button
                    android:id="@+id/button_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到我的页面" />

                <Button
                    android:id="@+id/button_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到影片收藏页面" />

                <Button
                    android:id="@+id/button_play_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到播放历史页面" />

                <Button
                    android:id="@+id/button_programlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到节目列表页面" />

                <Button
                    android:id="@+id/button_programlist2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到节目列表页面2" />

                <Button
                    android:id="@+id/button_programlist3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到节目列表页面3" />

                <Button
                    android:id="@+id/button_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到排行榜页面" />

                <Button
                    android:id="@+id/button_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到首页" />

                <Button
                    android:id="@+id/button_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到订购页面" />

                <Button
                    android:id="@+id/button_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转到节目集详情页面" />

                <Button
                    android:id="@+id/button_division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="跳转专题" />

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_home"
            android:visibility="gone" />

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:menu="@menu/navigation" />

</LinearLayout>
